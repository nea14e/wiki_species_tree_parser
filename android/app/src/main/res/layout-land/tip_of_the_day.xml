<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    android:orientation="horizontal"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view"
            android:background="@color/border"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_margin="16dp"
            android:contentDescription="@string/image_of_species_from_this_tip" />

        <Button
            android:id="@+id/view_in_tree"
            android:layout_width="175dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:background="@drawable/button_selector"
            android:text="@string/view_in_tree"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_remove_red_eye_black_24dp"
            android:paddingStart="12dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tip_message_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/next_tip_btn"
                android:layout_width="175dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:drawableStart="@drawable/ic_chevron_right_black_24dp"
                android:paddingStart="@dimen/button_drawable_padding"
                android:background="@drawable/button_selector"
                android:text="@string/next_tip_btn"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/ok_btn"
                android:layout_width="175dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:drawableStart="@drawable/ic_check_black_24dp"
                android:paddingStart="@dimen/button_drawable_padding"
                android:background="@drawable/button_selector"
                android:text="@string/ok_btn"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>