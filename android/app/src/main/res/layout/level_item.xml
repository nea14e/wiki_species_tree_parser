<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/level_item_layout"
    android:layout_width="158dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_height="250dp"
    tools:layout_width="@dimen/level_expanded_recycler_view_item_width"
    tools:layout_height="@dimen/level_expanded_recycler_view_height" >

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:background="@color/border" />

    <TextView
        android:id="@+id/item_title"
        tools:text="Red-Eared Turtle asdfasdfsaвfasвsadfsdфfasfasdfasdfsваa"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <Button
            android:id="@+id/wiki_btn"
            android:drawableStart="@drawable/ic_assignment_black_24dp"
            android:paddingStart="12dp"
            android:background="@drawable/button_selector"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/item_leaves_count"
                tools:text="99999"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="25dp" />

            <ImageView
                android:id="@+id/item_expanded_img"
                android:src="@drawable/ic_expand_more_black_24dp"
                android:layout_width="50dp"
                android:layout_height="25dp" />

        </LinearLayout>

        <Button
            android:id="@+id/show_fullscreen_image_btn"
            android:drawableStart="@drawable/ic_remove_red_eye_black_24dp"
            android:paddingStart="12dp"
            android:background="@drawable/button_selector"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

</LinearLayout>